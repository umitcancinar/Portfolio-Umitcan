rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Projeleri herkes görebilir (read), ama sadece giriş yapmış adminler düzenleyebilir (write)
    match /projects/{project} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
